<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- GRAPHIQUE ---
    const ctx = document.getElementById('universChart');
    if (ctx) {
        const chartData = <?= json_encode($chartJsData) ?>;
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Codes G√©o',
                    data: chartData.data,
                    backgroundColor: ['#3498db', '#e74c3c', '#2ecc71', '#f1c40f', '#9b59b6', '#1abc9c', '#e67e22', '#34495e'],
                    hoverOffset: 4,
                    borderColor: '#fff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                cutout: '70%',
                plugins: {
                    legend: { position: 'bottom' },
                    title: {
                        display: true,
                        text: 'R√©partition des codes par univers',
                        padding: { top: 10, bottom: 20 }
                    }
                }
            }
        });
    }

    // --- ANIMATIONS AU SCROLL ---
    const animateOnScroll = (entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const el = entry.target;

                // Animation des compteurs
                if (el.classList.contains('stat-number')) {
                    const target = +el.dataset.target;
                    el.innerText = '0';
                    const increment = Math.ceil(target / 100);
                    let current = 0;
                    
                    const updateCounter = () => {
                        current += increment;
                        if (current < target) {
                            el.innerText = current;
                            requestAnimationFrame(updateCounter);
                        } else {
                            el.innerText = target;
                        }
                    };
                    updateCounter();
                }
                
                // Animation de la barre de progression
                if (el.classList.contains('progress-bar')) {
                    el.style.width = el.dataset.width;
                }

                observer.unobserve(el);
            }
        });
    };

    const observer = new IntersectionObserver(animateOnScroll, {
        threshold: 0.5
    });

    document.querySelectorAll('.stat-number').forEach(el => observer.observe(el));
    document.querySelectorAll('.progress-bar').forEach(el => observer.observe(el));
});
</script>
